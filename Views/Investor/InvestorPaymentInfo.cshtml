
@{
    ViewData["Title"] = "InvestorPaymentInfo";
    Layout = "~/Views/Shared/_IdeasInvestorsInvestor.cshtml";
    var Insamount = ViewBag.Insamount;
}
<link href="//fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
<link href="//fonts.googleapis.com/css?family=Hind&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/template/assets/css/style-starter.css">
	<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=devanagari,latin-ext" rel="stylesheet">


<script type="text/javascript">
    $(function () {
        $("input[type=text]").first().focus();
    });
</script>





@using (Html.BeginForm("","",FormMethod.Post))
{
<div class="container py-3 d-flex flex-column align-items-center" style="margin-left:350px;"> 
    <div class="container mt-5 px-5">
    <div class="mb-4">
        <h2>Confirm order and pay</h2> <span>please make the payment, after that you can enjoy all the features and benefits.</span>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card p-3">
                <h6 class="text-uppercase">Payment details</h6>
                <div class="inputbox mt-3"> <input type="text" name="name" class="form-control" required="required"> <span>Name on card</span> </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="inputbox mt-3 mr-2"> <input type="text" name="Card" id="Card" class="form-control" required="required"> <i class="fa fa-credit-card"></i> <span>Card Number</span> </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex flex-row">
                            <div class="inputbox mt-3 mr-2"> <input type="text" name="EDate" id="EDate" class="form-control" required="required"> <span>Expiry</span> </div>
                            <div class="inputbox mt-3 mr-2"> <input type="text" name="CVV" id="CVV" class="form-control" required="required"> <span>CVV</span> </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4 mb-4">
                    <h6 class="text-uppercase">Billing Address</h6>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="inputbox mt-3 mr-2"> <input type="text" name="name" class="form-control" required="required"> <span>Street Address</span> </div>
                        </div>
                        <div class="col-md-6">
                            <div class="inputbox mt-3 mr-2"> <input type="text" name="name" class="form-control" required="required"> <span>City</span> </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <div class="inputbox mt-3 mr-2"> <input type="text" name="name" class="form-control" required="required"> <span>State/Province</span> </div>
                        </div>
                        <div class="col-md-6">
                            <div class="inputbox mt-3 mr-2"> <input type="text" name="name" class="form-control" required="required"> <span>Zip code</span> </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4 mb-4 d-flex justify-content-between"> <span>Previous step</span> <a href="@Url.Action("InvestorHome","Investor",new{Pid=@TempData["Pid"]})"><input type="button"  value="Pay $ @TempData["Insamount"]" class="btn btn-success px-3"> </a></div>
        </div>
        
    </div>
</div>
</div>
    
}

<script src="~/js/jquery.mask.min.js"></script>

@section PaymentMode
{

    <script src="@Url.Content("~/scripts/jquery.mask.min.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {          
            $("#Card").mask('9999-9999-9999-9999');
            $("#EDate").mask('99/99');
            $("#CVV").mask('999');
        });


    </script>


}


