@model IEnumerable<IdeasAndInvestors.Models.PersonMaster>
@{
    ViewData["Title"] = "AdminViewStartUpDetails";
    Layout = "~/Views/Shared/_IdeasInvestorsAdmin.cshtml";
}

<center><h1>Startup Details</h1> </center>
<table id="booking" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Qualification</th>
                <th>Photo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td>
                    @user.Pid
                </td>
                <td>
                    @user.Pname
                </td>
                <td>
                    @user.Paddress
                </td>
                <td>
                    @user.Pphone
                </td>
                <td>
                    @user.Pemail
                </td>
                 <td>
                    @user.Pqualification
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(@user.Pimage))
                    {
                        <img width="100px" height="100px" src="@Url.Content("~/" + user.Pimage)" alt="No image found">
                    }
                </td>


            </tr>
        }
            </tbody>
    </table>
    <script type="text/javascript">
        $(document).ready(function() {
    $('#booking').DataTable();
} );    
    </script>

